<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="172dp"
    android:paddingTop="@dimen/list_status_bar_24"
    android:paddingRight="@dimen/nav_edge_left_right_margines_16"
    android:paddingLeft="@dimen/nav_edge_left_right_margines_16"
    android:paddingBottom="@dimen/nav_space_between_content_areas_8"
    android:background="@drawable/header">
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ava"
        android:layout_marginTop="@dimen/nav_top_margin_16"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_side_nav_wight_56"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/user_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Школьная Наталья"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/user_email_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="mymail@mail.ru"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="sans-serif"/>
        
    </LinearLayout>

</RelativeLayout>